{
  "$id": "https://github.com/data-fair/catalog-udata/config",
  "x-exports": [
    "types",
    "validate",
    "schema"
  ],
  "title": "UDataConfig",
  "type": "object",
  "additionalProperties": false,
  "required": [
    "url"
  ],
  "properties": {
    "url": {
      "type": "string",
      "title": "URL",
      "description": "The url of the catalog",
      "x-i18n-description": {
        "fr": "L'URL du catalogue"
      },
      "pattern": "^https?://.*[^/]$",
      "errorMessage": "The URL must start with http:// or https:// and must not end with `/`.",
      "x-i18n-errorMessage": {
        "fr": "L'URL doit commencer par http:// ou https:// et ne pas se terminer par `/`."
      },
      "examples": [
        "https://data.gouv.fr",
        "https://demo.data.gouv.fr"
      ]
    },
    "apiKey": {
      "type": "string",
      "title": "API Key",
      "x-i18n-title": {
        "fr": "Clé API"
      },
      "description": "This key is to be configured in your profile on the catalog.",
      "x-i18n-description": {
        "fr": "Cette clé est à configurer dans votre profil sur le catalogue."
      },
      "layout": {
        "props": {
          "type": "password",
          "autocomplete": "new-password"
        }
      }
    },
    "organization": {
      "type": "object",
      "title": "Organization for publication",
      "x-i18n-title": {
        "fr": "Organisation de publication"
      },
      "description": "Leave empty to publish on a personal account. Otherwise, use an organization where you have write permissions.",
      "x-i18n-description": {
        "fr": "Laissez vide pour publier sur un compte personnel. Sinon utilisez une organisation dans laquelle vous avez le droit d'écriture."
      },
      "required": [
        "id",
        "name"
      ],
      "properties": {
        "id": {
          "type": "string"
        },
        "name": {
          "type": "string"
        },
        "image_url": {
          "type": "string"
        }
      },
      "layout": {
        "getItems": {
          "url": "${parent.data.url}/api/1/organizations/suggest",
          "itemsResults": "data",
          "itemTitle": "item.name",
          "itemIcon": "item.image_url",
          "qSearchParam": "q"
        },
        "props": {
          "placeholder": "Search...",
          "x-i18n-placeholder": {
            "fr": "Rechercher..."
          }
        }
      }
    }
  },
  "layout": [
    {
      "children": [
        "url",
        "apiKey"
      ]
    },
    {
      "title": "Publication settings",
      "x-i18n-title": {
        "fr": "Paramètres de publication"
      },
      "if": {
        "expr": "parent.data.apiKey",
        "pure": false
      },
      "children": [
        "organization"
      ]
    }
  ]
}